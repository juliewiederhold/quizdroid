<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hello.jcw27.washington.edu.quizdroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QuizApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BetweenQuestion"
            android:label="@string/title_activity_between_question" >
        </activity>
        <activity
            android:name=".TopicOverview"
            android:label="@string/title_activity_topic_overview" >
        </activity>
        <activity
            android:name=".Question"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".Manager"
            android:label="@string/title_activity_fragment_manager" >
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/title_activity_preferences" >
        </activity>
        <receiver
            android:name=".AlarmReceiver"
            android:label="@string/title_activity_alarm_receiver" >
        </receiver>
    </application>

</manifest>
